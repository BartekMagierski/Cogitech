{% extends '/forms/boxTemplate.html.twig' %}


{% block form %}
<form method="post">
	<h1 class="h3 mb-4 font-weight-normal">Please sign in</h1>
	<div class="container">
		<div class="row mb-3">
			<label class="col" for="inputUsername">Username: </label>
			<input class="col-7" type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
		</div>
		<div class="row">
			<label class="col" for="inputPassword">Password:</label>
			<input class="col-7" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
		</div>
	</div>
	<div class="mt-4 text-end">
		<button class="btn btn-lg btn-success text-white px-4" type="submit">Sign in</button>
	</div>
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
</form>
{% endblock %}

{% block form_message %}

	{% if error %}
	<div class="alert alert-danger auto-close mt-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

{% endblock %}
